<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.heart_rate.result.ResultActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed|enterAlways"
            app:menu="@menu/top_app_bar_menu"
            app:navigationIcon="@drawable/baseline_arrow_back"
            app:navigationIconTint="@color/primary_text_color"
            app:title="Your Result"
            app:titleCentered="true"
            app:titleTextColor="@color/primary_text_color" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_pulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                app:layout_constraintLeft_toRightOf="@+id/cl_age"
                app:layout_constraintRight_toLeftOf="@+id/cl_gender"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/heart_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/heart_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"


                    />

                <TextView
                    android:id="@+id/tv_pulse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Pulse"
                    android:textColor="@color/primary_text_color"
                    android:textSize="20dp"
                    app:layout_constraintLeft_toLeftOf="@+id/heart_icon"
                    app:layout_constraintRight_toRightOf="@+id/heart_icon"
                    app:layout_constraintTop_toBottomOf="@+id/heart_icon"

                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_pulse"
                    app:layout_constraintRight_toRightOf="@+id/tv_pulse"
                    app:layout_constraintTop_toTopOf="@+id/tv_pulse">

                    <ImageView
                        android:id="@+id/img_pulse_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pink_circle" />

                    <TextView
                        android:id="@id/tv_pulse_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingBottom="10dp"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_pulse_value"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="BPM"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cl_pulse"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/age_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/person_age"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"


                    />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Age"
                    android:textColor="@color/primary_text_color"
                    android:textSize="20dp"
                    app:layout_constraintLeft_toLeftOf="@+id/age_icon"
                    app:layout_constraintRight_toRightOf="@+id/age_icon"
                    app:layout_constraintTop_toBottomOf="@+id/age_icon"

                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_age"
                    app:layout_constraintRight_toRightOf="@+id/tv_age"
                    app:layout_constraintTop_toTopOf="@+id/tv_age">

                    <ImageView
                        android:id="@+id/img_age_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/blue_circle" />

                    <TextView
                        android:id="@+id/tv_age_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"
                        android:textSize="30dp"

                        />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintLeft_toRightOf="@+id/cl_pulse"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/gender_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/gender"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"


                    />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Gender"
                    android:textColor="@color/primary_text_color"
                    android:textSize="20dp"
                    app:layout_constraintLeft_toLeftOf="@+id/gender_icon"
                    app:layout_constraintRight_toRightOf="@+id/gender_icon"
                    app:layout_constraintTop_toBottomOf="@+id/gender_icon"

                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_gender"
                    app:layout_constraintRight_toRightOf="@+id/tv_gender"
                    app:layout_constraintTop_toTopOf="@+id/tv_gender">

                    <ImageView
                        android:id="@+id/img_gender_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/green_circle" />

                    <ImageView
                        android:id="@+id/img_gender"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:paddingBottom="15dp"
                         />

                    <TextView

                        android:id="@+id/tv_gender_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_gender"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/white"
                        android:textSize="16dp"

                        />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Your mood is"
                android:textColor="@color/primary_text_color"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/mood_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDiagnose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient_blue_lightblue"
                android:fontFamily="@font/poppins_medium"
                android:text="Get diagnosis >"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDiagnoses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/output_result"
            android:textColor="@color/secondary_text_color" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>