<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.heart_rate.result.ResultActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed|enterAlways"
            app:menu="@menu/top_app_bar_menu"
            app:navigationIcon="@drawable/baseline_arrow_back"
            app:navigationIconTint="@color/primary_text_color"
            app:title="Your Result"
            app:titleCentered="true"
            app:titleTextColor="@color/primary_text_color" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_pulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                app:layout_constraintLeft_toRightOf="@+id/cl_age"
                app:layout_constraintRight_toLeftOf="@+id/cl_gender"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/heart_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/heart_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"


                    />

                <TextView
                    android:id="@+id/tv_pulse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Pulse"
                    android:textColor="@color/primary_text_color"
                    android:textSize="20dp"
                    app:layout_constraintLeft_toLeftOf="@+id/heart_icon"
                    app:layout_constraintRight_toRightOf="@+id/heart_icon"
                    app:layout_constraintTop_toBottomOf="@+id/heart_icon"

                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_pulse"
                    app:layout_constraintRight_toRightOf="@+id/tv_pulse"
                    app:layout_constraintTop_toTopOf="@+id/tv_pulse">

                    <ImageView
                        android:id="@+id/img_pulse_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pink_circle" />

                    <TextView
                        android:id="@id/tv_pulse_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingBottom="10dp"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_pulse_value"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="BPM"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cl_pulse"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/weight_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/weight_kilograms_svgrepo_com"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"


                    />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Weight"
                    android:textColor="@color/primary_text_color"
                    android:textSize="20dp"
                    app:layout_constraintLeft_toLeftOf="@+id/weight_icon"
                    app:layout_constraintRight_toRightOf="@+id/weight_icon"
                    app:layout_constraintTop_toBottomOf="@+id/weight_icon"

                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_age"
                    app:layout_constraintRight_toRightOf="@+id/tv_age"
                    app:layout_constraintTop_toTopOf="@+id/tv_age">

                    <ImageView
                        android:id="@+id/img_weight_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/blue_circle" />


                    <TextView
                        android:id="@+id/tv_weight_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:layout_centerInParent="true"
                        android:text="20.0"
                        android:layout_marginTop="20dp"

                        />

                    <TextView
                        android:id="@+id/tv_weight_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_weight_value"
                        android:layout_centerHorizontal="true"

                        android:fontFamily="@font/poppins_medium"
                        android:text="kg"
                        android:textColor="@color/white"
                        android:textSize="15dp"

                        />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintLeft_toRightOf="@+id/cl_pulse"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/height_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/height_svgrepo_com"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"


                    />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Height"
                    android:textColor="@color/primary_text_color"
                    android:textSize="20dp"
                    app:layout_constraintLeft_toLeftOf="@+id/height_icon"
                    app:layout_constraintRight_toRightOf="@+id/height_icon"
                    app:layout_constraintTop_toBottomOf="@+id/height_icon"

                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_gender"
                    app:layout_constraintRight_toRightOf="@+id/tv_gender"
                    app:layout_constraintTop_toTopOf="@+id/tv_gender">

                    <ImageView
                        android:id="@+id/img_height_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/green_circle" />


                    <TextView
                        android:id="@+id/tv_height_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:text="20.0"

                        />

                    <TextView
                        android:id="@+id/tv_height_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_height_value"
                        android:layout_centerHorizontal="true"

                        android:fontFamily="@font/poppins_medium"
                        android:text="m"
                        android:textColor="@color/white"
                        android:textSize="15dp"

                        />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_rounded_border"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/bg_primary"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"

                        android:fontFamily="@font/poppins_bold"
                        android:text="Your mood "
                        android:textColor="@color/primary_text_color"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/mood_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity=""
                        android:src="@drawable/joyful" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDiagnose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gradient_blue_lightblue"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Get diagnosis >"
                        android:visibility="gone"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_rounded_border"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/bg_primary"
                    >

                    <TextView
                        android:id="@id/txt_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text=""
                        android:textColor="@color/primary_text_color"
                        android:textSize="20dp" />

                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_activity_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_rounded_border"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/bg_primary"
                    >

                    <TextView
                        android:id="@+id/txt_activity_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"

                        android:fontFamily="@font/poppins_bold"
                        android:text="Resting"
                        android:textColor="@color/primary_text_color"
                        android:textSize="20dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_rounded_border"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/bg_primary"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Age:"
                        android:textColor="@color/primary_text_color"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/txt_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text=""
                        android:textColor="@color/primary_text_color"
                        android:textSize="20dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_dianose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >
                <LinearLayout
                    android:id="@+id/ll_dianose_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_rounded_border"
                    android:layout_marginTop="20dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"

                            android:fontFamily="@font/poppins_bold"
                            android:text="Your result is "
                            android:textColor="@color/primary_text_color"
                            android:textSize="20dp"
                            />
                        <TextView
                            android:id="@+id/tvResultStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:fontFamily="@font/poppins_bold"
                            android:text="normal"
                            android:textColor="@color/primary_color"
                            android:textSize="25dp"
                            />

                        <TextView
                            android:id="@+id/txt_dianose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvDiagnoses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/output_result"
                        android:visibility="gone"
                        android:textColor="@color/secondary_text_color"

                        />

                    <LinearLayout
                        android:id="@+id/ll_free_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:src="@drawable/mia_examine"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Buy premium to..."
                            android:textColor="@color/primary_text_color"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Unlock diagnostic insight and suggestions"
                            android:textColor="@color/primary_text_color"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18dp"
                            />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/premiumBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_gradient_blue_lightblue"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Buy Premium"
                            android:textColor="@color/white"
                            android:paddingHorizontal="20dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginVertical="20dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_premium_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_diagnose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Dianose your health"
                            android:textColor="@color/primary_text_color"
                            android:textSize="20dp"
                                    />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_Dianoses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_gradient_blue_lightblue"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Dianose"
                            android:textColor="@color/white"
                            android:paddingHorizontal="20dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginVertical="20dp"
                            />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>


        </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>