<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile_onboarding.SetDataFragment"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    >

    <TextView
        android:id="@+id/txt_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:fontFamily="@font/poppins_medium"
        android:textSize="30sp"
        android:textColor="@color/primary_text_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        />
    <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
        android:id="@+id/toggle_btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/txt_gender"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        >
        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:gravity="center"
            android:id="@+id/btn_male"
            android:layout_width="0dp"
            android:layout_height="125dp"
            app:toggle_btnCornerRadius="20dp"
            app:layout_flexGrow="1"
            app:toggle_borderColor="@color/primary_text_color"
            app:toggle_borderWidth="2dp"
            app:toggle_backgroundColor="@color/white"
            app:toggle_selectedBackgroundColor="@color/secondary_color"
            app:toggle_selectedBorderColor="@color/secondary_color"

            app:toggle_iconGravity="top|center"
            app:toggle_iconPaddingTop="5dp"
            app:toggle_icon="@drawable/male_stickman"
            app:toggle_iconColor="@color/primary_text_color"

            app:toggle_textPaddingBottom="20dp"
            app:toggle_textPaddingHorizontal="48dp"
            app:toggle_text="Male"
            app:toggle_textGravity="bottom|center"
            app:toggle_selectedTextColor="@android:color/white"

            />
        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:gravity="center"
            android:id="@+id/btn_female"
            android:layout_width="0dp"
            android:layout_height="125dp"
            app:toggle_btnCornerRadius="20dp"
            app:layout_flexGrow="1"
            app:toggle_borderColor="@color/primary_text_color"
            app:toggle_borderWidth="2dp"
            app:toggle_backgroundColor="@color/white"
            app:toggle_selectedBackgroundColor="@color/primary_color"
            app:toggle_selectedBorderColor="@color/primary_color"

            app:toggle_iconGravity="top|center"
            app:toggle_iconPaddingTop="5dp"
            app:toggle_icon="@drawable/female_stickman"
            app:toggle_iconColor="@color/primary_text_color"

            app:toggle_textPaddingBottom="20dp"
            app:toggle_textPaddingHorizontal="40dp"
            app:toggle_text="Female"
            app:toggle_textGravity="bottom|center"
            app:toggle_selectedTextColor="@android:color/white"

            />

    </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>
    <TextView
        android:id="@+id/txt_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:fontFamily="@font/poppins_medium"
        android:textSize="30sp"
        android:textColor="@color/primary_text_color"
        app:layout_constraintTop_toBottomOf="@+id/toggle_btn_group"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <EditText
        android:id="@+id/edt_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select date of birth"
        app:layout_constraintTop_toBottomOf="@+id/txt_dob"
        app:layout_constraintLeft_toRightOf="parent"
        android:drawableRight="@drawable/calender_with_love"
        android:textSize="17dp"
        android:ems="10"
        android:clickable="false"
        android:focusable="false"
        android:cursorVisible="false"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <TextView
        android:id="@+id/txt_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Height (meter)"
        android:fontFamily="@font/poppins_medium"
        android:textSize="30dp"
        android:textColor="@color/primary_text_color"
        app:layout_constraintTop_toBottomOf="@+id/edt_dob"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/txt_height_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/primary_text_color"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/ll_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/card_view_height"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"

        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/male_stickman"

            />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_height"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            app:thumbColor="@color/primary_text_color"
            app:trackColor="@color/light_purple"
            app:haloColor="@color/light_blue"
            android:valueFrom="0.0"
            android:valueTo="2.0"
            android:stepSize="0.01"
            app:tickVisible="false"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/male_stickman_high"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight (kg)"
        android:fontFamily="@font/poppins_medium"
        android:textSize="30sp"
        android:textColor="@color/primary_text_color"
        app:layout_constraintTop_toBottomOf="@+id/ll_height"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_weight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/txt_weight_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/primary_text_color"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/ll_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/card_view_weight"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"

        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/male_stickman"

            />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_weight"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            app:thumbColor="@color/primary_text_color"
            app:trackColor="@color/light_purple"
            app:haloColor="@color/light_blue"
            android:valueFrom="0"
            android:valueTo="200"
            android:stepSize="1"
            app:tickVisible="false"

            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/male_fat"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Finish"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/background_button_gradient"
        app:layout_constraintTop_toBottomOf="@+id/ll_weight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
