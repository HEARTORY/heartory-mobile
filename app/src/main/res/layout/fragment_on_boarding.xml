<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.heart_rate_onboarding.OnBoardingFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_measure_blood_pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.012">

            <TextView
                android:id="@+id/tv_measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_italic"
                android:text="Measure "
                android:textColor="@color/secondary_color"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_blood_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_italic"
                android:text="Blood Pressure"
                android:textColor="@color/primary_color"
                android:textSize="25dp"
                android:textStyle="bold"

                />
        </LinearLayout>
        <ImageView
            android:id="@+id/img_blood_pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/ll_measure_blood_pressure"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/secondary_color"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/img_blood_pressure"
            app:layout_constraintStart_toStartOf="parent" />
            />
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_light"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/secondary_color"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"

            />
        />
    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>